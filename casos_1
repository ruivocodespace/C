//casos_1
#include <stdio.h>

int main() {
    
int opcao;
    // Write C code here
    printf("Digite um número entre 1 e 12:\n");
    scanf("%i", &opcao);
    
    switch (opcao){
        case 1:
        printf("Janeiro");
        break;
        
        case 2:
        printf("Fevereiro");
        break;
        
        case 3:
        printf("Março");
        break;
        
        case 4:
        printf("Abril");
        break;
        
        case 5:
        printf("Maio");
        break;
        
        case 6:
        printf("Junho");
        break;
        
        case 7:
        printf("Julho");
        break;
        
        case 8:
        printf("Agosto");
        break;
        
        case 9:
        printf("Setembro");
        break;
        
        case 10:
        printf("Outubro");
        break;
        
        case 11:
        printf("Novembro");
        break;
        
        case 12:
        printf("Dezembro");
        break;
        
        default:
        printf("Inválido");
        break;
    }

    return 0;
}
