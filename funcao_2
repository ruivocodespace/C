//funcao_2
#include <stdio.h>

int idade(int anos,int meses, int dias){
    return (anos * 365) + (meses * 30) + dias;
}

int main() {
    int anos, meses, dias;
    printf("Insira sua idade em anos, meses e dias:\n");
    scanf("%d %d %d", &anos, &meses, &dias);
    
    int totalDias = idade(anos, meses, dias);
    printf("Sua idade em dias Ã©: %d\n", totalDias);

    return 0;
}
